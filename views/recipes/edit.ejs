<%- include("../partials/header") %>

    <div class="row mt-5">
        <div class="col-11 col-sm-9 col-md-7 col-lg-6 mx-auto mb-5">
            <form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
                <div class="form-group">
                   <label for="title">Title</label>
                   <input type="text" class="form-control" id="title" name="recipe[title]" value="<%= recipe.title %>" required>
                </div>

                <div class="form-group">
                    <label for="image">Image URL</label>
                    <input type="text" class="form-control" id="image" name="recipe[image]" value="<%= recipe.image %>" required>
                 </div>
                
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" name="recipe[description]" required><%= recipe.description %>"</textarea>
                </div>
                
                <div class="form-group">
                    <label class="d-block">Category</label>
                    <div class="form-check-inline">
                        <input class="form-check-input" type="radio" name="recipe[category]" id="starter" value="starter" <% if(recipe.category == "starter"){ %> checked <% } %> >
                        <label class="form-check-label" for="starter">
                            Starter
                        </label>
                    </div>
                    <div class="form-check-inline">
                        <input class="form-check-input" type="radio" name="recipe[category]" id="main" value="main" <% if(recipe.category == "main"){ %> checked <% } %>>
                        <label class="form-check-label" for="main">
                            Main
                        </label>
                    </div>
                    <div class="form-check-inline">
                        <input class="form-check-input" type="radio" name="recipe[category]" id="dessert" value="dessert" <% if(recipe.category == "dessert"){ %> checked <% } %> >
                        <label class="form-check-label" for="dessert">
                            Dessert
                        </label>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-6">
                      <label for="prepTime">Prep time</label>
                      <input type="text" class="form-control" id="prepTime" name="recipe[prepTime]" value="<%= recipe.prepTime %>" required>
                    </div>
                    <div class="form-group col-6">
                      <label for="cookTime">Cook time</label>
                      <input type="text" class="form-control" id="cookTime" name="recipe[cookTime]" value="<%= recipe.cookTime %>" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-6">
                      <label for="serves">Serves</label>
                      <input type="text" class="form-control" id="serves" name="recipe[serves]" value="<%= recipe.serves %>" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="ingredients">Ingredients</label>
                    <textarea class="form-control long-text-box" id="ingredients" name="recipe[ingredients]" required><%= recipe.ingredients %></textarea>
                </div>

                <div class="form-group">
                    <label for="method">Method</label>
                    <textarea class="form-control long-text-box" id="method" name="recipe[method]" placeholder="method" required><%= recipe.method %></textarea>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
        </div>
    </div>

<%- include("../partials/footer") %>